        type oneToMany
        property employees
    }
}

method findAllWithEmployees2 {
    association {
        table employees
        type oneToMany
        property employees
        column departments_id
        referencedColumn id
    }
}

method findAllWithOrderedEmployees {
    association {
        table employees
        type oneToMany
        property employees
        orderBy "id DESC"
    }
}

